{% extends 'base.html.twig' %}
{% block body %}
    <!-- header-a -->
    <div id="tm-header-a" class="tm-block-header-a uk-block uk-block-default tm-block-fullwidth tm-grid-collapse ">
        <div class="uk-container uk-container-center">
            <section class="tm-header-a uk-grid" data-uk-grid-match="{target:'> div > .uk-panel'}">

                <div class="uk-width-1-1">
                    <div class="uk-panel uk-text-center uk-contrast tm-overlay-secondary tm-header-height">
                        <div class="tm-background-cover uk-cover-background uk-flex uk-flex-center uk-flex-middle"
                             style="background-position: 50% 0px; background-image:url({{ asset('assets/images/background/bg-image-12.jpg') }})"
                             data-uk-parallax="{bg: '-200'}">
                            <div class="uk-position-relative uk-container">

                                <div data-uk-parallax="{opacity: '1,0', y: '-50'}">

                                    <div data-uk-scrollspy="{cls:'uk-animation-slide-top', delay:300}">
                                        <h1 class="uk-module-title-alt uk-margin-top">Your discount card</h1>
                                    </div>

                                    <div data-uk-scrollspy="{cls:'uk-animation-slide-top', delay:800}">
                                        {# <h5 class="uk-sub-title-small">If you can dream it, you can do it</h5> #}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- main content -->
    <!-- main content -->
    <div id="tm-main" class="tm-block-main uk-block uk-block-default">
        <div class="uk-container uk-container-center">
            <div class="tm-middle uk-grid" data-uk-grid-match data-uk-grid-margin>
                <div class="tm-main uk-width-medium-1-1">
                    <main id="tm-content" class="tm-content">
                        <article class="uk-article tm-article">
                            <div class="tm-article-wrapper">
                                <div class="tm-article-content uk-margin-large-bottom uk-margin-top-remove">
                                    <div class="tm-article">
                                        <div class="uk-text-center">
                                            <h2 class="uk-module-title-alt uk-margin-large-top">
                                                Discount card
                                            </h2>
                                            {# <h4 class="uk-sub-title">Founded in 1890</h4> #}
                                        </div>
                                        <div class="tm-article-wrapper">
                                            <div class="tm-article-content uk-margin-large-bottom uk-margin-top-remove">
                                                <div class="tm-article">
                                                    <div class="uk-grid" data-uk-grid-margin="">
                                                        <div class="uk-width-small-1-1 uk-width-medium-1-2 uk-width-large-1-2">
                                                            <div class="uk-panel uk-panel-box tm-panel-card ">
                                                                <div class="tm-card-content">
                                                                    <div class="card-container">
                                                                        {% if discount.checkDiscountUser.verifyCard and discount.findByDiscountUser%}
                                                                            {% set discounts = discount.findByDiscountUser %}
                                                                            <div class="card-block-left">
                                                                                <div class="card-block-left-user">
                                                                                    <span>{{ discounts.user.firstName|capitalize }} {{ discounts.user.lastName|capitalize }}</span>
                                                                                </div>
                                                                                <div class="card-block-left-title">
                                                                                    <h2>Discount card</h2>
                                                                                </div>
                                                                                <div class="card-block-left-type">
                                                                                    <span>{{ discounts.title|capitalize }}</span>
                                                                                </div>
                                                                                <div class="card-block-left-desc">
                                                                                    <span>{{ discounts.description|capitalize }} </span>
                                                                                </div>
                                                                                <div class="card-block-left-desc">
                                                                                    <span>Valid: {{ (discounts.indefinitely)? 'Indefinitely'|upper:discounts.end|date("d/m/Y") }}</span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="card-block-right">
                                                                                <div class="card-block-percent">
                                                                                    <div class="discount-title"><i
                                                                                                class="uk-icon-star"></i>
                                                                                    </div>
                                                                                    <div class="discount-body">
                                                                                        <h2>{{ discounts.percent }}
                                                                                            %</h2>
                                                                                    </div>
                                                                                    <div class="discount-footer"><h2>{{ 'off'|upper }}</h2></div>
                                                                                </div>
                                                                            </div>
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <a href="{{ path('app_myaccount') }}"
                                                       class="uk-badge-note uk-margin-top uk-badge"><i
                                                                class="uk-icon-angle-left"></i> Back to your account</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </main>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


